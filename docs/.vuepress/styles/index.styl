*{
	&::-webkit-scrollbar {
    width: 4px;
    height: 4px;
    border-radius: 4px;
    transition: .3s background;
  }

  &::-webkit-scrollbar-thumb {
    background: none;
  }

  &:hover::-webkit-scrollbar-thumb {
    background: #368fff;
  }
}
